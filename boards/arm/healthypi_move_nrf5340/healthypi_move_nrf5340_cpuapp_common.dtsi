#include "healthypi_move_nrf5340_cpuapp_common-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <dt-bindings/regulator/npm1300.h>

/ {

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart0;
		zephyr,bt-c2h-uart = &uart0;
		zephyr,bt-hci-ipc = &ipc0;
		nordic,802154-spinel-ipc = &ipc0;
		zephyr,ieee802154 = &ieee802154;
		zephyr,display = &gc9a01; //&st7789v;
		nordic,pm-ext-flash = &w25q01jv;
	};

	pwmleds {
		compatible = "pwm-leds";
		pwm_led0: pwm_led_0 {
			status = "okay";
			pwms = <&sw_pwm 0 PWM_MSEC(10) PWM_POLARITY_NORMAL>;
		};
	};


	gpiokeys: gpio_keys {
		compatible = "gpio-keys";
		button_up: sw1 {
			
			label = "Button UP / SW1";
			gpios = <&gpio0 3 (GPIO_PULL_UP | GPIO_ACTIVE_LOW) >;
			zephyr,code = <INPUT_KEY_UP>;
		};

		button_down: sw3 {
			
			label = "Button DOWN / SW3";
			gpios = <&gpio0 5 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			zephyr,code = <INPUT_KEY_DOWN>;
		};
	};

	aliases {
		pwm-led0 = &pwm_led0;
		//mcuboot-button0 = &button_up;

		watchdog0 = &wdt0;
		esp-uart= &uart0;

		max30001 = &max30001;
		//max32664 = &max32664;
		maxm86146 = &maxm86146;

		rtc = &rtc_rv;
	};

};

/ {
	lvgl_pointer_input: lvgl_pointer {
		compatible = "zephyr,lvgl-pointer-input";
		input = <&cst816s>;
		invert-y;
		//swap-xy;
		invert-x;
	};
};

&adc {
	status = "disabled";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&i2c1 {
	compatible = "nordic,nrf-twim";
	status = "okay";
	pinctrl-0 = <&i2c1_default>;
	pinctrl-1 = <&i2c1_sleep>;
	clock-frequency = <I2C_BITRATE_FAST>;
	pinctrl-names = "default", "sleep";

	cst816s: cst816s@15 {
		compatible = "hynitron,cst816s";
		reg = <0x15>;
		status = "okay";
		irq-gpios = <&gpio0 26 GPIO_ACTIVE_LOW>;
		rst-gpios = <&gpio0 27 GPIO_ACTIVE_LOW>;
	};

	npm_pmic: pmic@6b {
		compatible = "nordic,npm1300";
		host-int-gpios = <&gpio0 7 GPIO_ACTIVE_LOW>;
		pmic-int-pin = <2>;
		reg = <0x6b>;

		npm_pmic_gpio: gpio-controller {
			compatible = "nordic,npm1300-gpio";
			gpio-controller;
			#gpio-cells = <2>;
			ngpios = <5>;
		};

		npm_pmic_regulators: regulators {
			compatible = "nordic,npm1300-regulator";

			/* limits are set to min/max allowed values */
			npm_pmic_buck1: BUCK1 {
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <3300000>;
				regulator-init-microvolt = <3300000>;
			};

			npm_pmic_buck2: BUCK2 {
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <3300000>;
				regulator-init-microvolt = <3300000>;
				retention-microvolt = <2500000>;
				//regulator-boot-on;
				//enable-gpios = <&npm_pmic_gpio 1 GPIO_ACTIVE_LOW>;
				//retention-gpios = <&npm_pmic_gpio 2 GPIO_ACTIVE_HIGH>;
				//pwm-gpios = <&npm_pmic_gpio 2 GPIO_ACTIVE_LOW>;
			};

			npm_pmic_ldo1: LDO1 {
				regulator-initial-mode = <NPM1300_LDSW_MODE_LDSW>;
				//regulator-boot-on;
				//startup-delay-us = <100000>;
			};

			npm_pmic_ldo2: LDO2 {
				regulator-initial-mode = <NPM1300_LDSW_MODE_LDSW>;
			};
		};

		npm_pmic_charger: charger {
			compatible = "nordic,npm1300-charger";
			term-microvolt = <4150000>;
			term-warm-microvolt = <4000000>;
			current-microamp = <200000>;
			dischg-limit-microamp = <1000000>;
			vbus-limit-microamp = <500000>;
			thermistor-ohms = <10000>;
			thermistor-beta = <3380>;
			charging-enable;
		};

		npm_pmic_buttons: buttons {
			compatible = "gpio-keys";
			pmic_button0: pmic_button_0 {
				gpios = <&npm_pmic_gpio 0 GPIO_ACTIVE_LOW>;
				label = "Pmic button switch 0";
				zephyr,code = <INPUT_KEY_0>;
			};
		};

		npm_pmic_leds: leds {
			compatible = "nordic,npm1300-led";
			nordic,led0-mode = "error";
			nordic,led1-mode = "charging";
			nordic,led2-mode = "host";
		};
	};

	rtc_rv: rv@51 {
		compatible = "microcrystal,rv8263";
		reg = <0x51>;
	};

	lsm6: lsm6dso@6a {
		compatible = "st,lsm6dso";
		reg = <0x6a>;
		status = "okay";
		irq-gpios = <&gpio1 11 GPIO_ACTIVE_LOW>;
	};
};

&i2c2 {
	compatible = "nordic,nrf-twim";
	status = "okay";
	pinctrl-0 = <&i2c2_default>;
	pinctrl-1 = <&i2c2_sleep>;
	clock-frequency = <I2C_BITRATE_FAST>;
	pinctrl-names = "default", "sleep";
	zephyr,concat-buf-size = <16384>;
	zephyr,flash-buf-max-size = <16384>;

	maxm86146: maxm86146@55 {
		compatible = "maxim,maxm86146";
		reg = <0x55>;
		reset-gpios = <&gpio1 8 GPIO_ACTIVE_HIGH>;
		mfio-gpios = <&gpio0 28 GPIO_ACTIVE_HIGH>;
		status = "okay";
	};

	max30205: max30205@48 {
		compatible = "maxim,max30205";
		status = "okay";
		reg = <0x48>;
	};
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-1 = <&uart0_sleep>;
	pinctrl-names = "default", "sleep";
};


&pwm0 {
	status = "disabled";
	pinctrl-0 = <&pwm0_default>;
	pinctrl-1 = <&pwm0_sleep>;
	pinctrl-names = "default", "sleep";
};


&sw_pwm {
	status = "okay";
	channel-gpios = <&gpio1 5 PWM_POLARITY_INVERTED>;
};


&qspi {
	status = "okay";
	pinctrl-0 = <&qspi_default>;
	pinctrl-1 = <&qspi_sleep>;
	pinctrl-names = "default", "sleep";

	w25q01jv: w25q01jveiq@0 {
		compatible = "nordic,qspi-nor";
		reg = <0>;
		//writeoc = "pp2o";
		//readoc = "read2o";
		//quad-enable-requirements = "S2B1v5";
		sck-frequency = <128000000>;
		size = <DT_SIZE_M(128)>;
		has-dpd;
		t-enter-dpd = <3000>;
		t-exit-dpd = <30000>;
		jedec-id = [ ef 40 21  ];
		status = "okay";
	};
};


