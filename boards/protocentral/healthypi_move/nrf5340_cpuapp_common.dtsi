			gpios = <&gpio0 19 GPIO_ACTIVE_HIGH>;
			label = "Boost 5V converter enable";
		};
	};

	gpio_fwd: nrf-gpio-forwarder {
		compatible = "nordic,nrf-gpio-forwarder";
		status = "okay";
		uart {
